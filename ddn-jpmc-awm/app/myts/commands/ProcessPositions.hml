---
kind: ObjectType
version: v1
definition:
  name: Array
  fields:
    - name: raw
      type: String!
  graphql:
    typeName: App_Array
    inputTypeName: App_ArrayInput
  dataConnectorTypeMapping:
    - dataConnectorName: myts
      dataConnectorObjectType: array

---
kind: TypePermissions
version: v1
definition:
  typeName: Array
  permissions:
    - role: admin
      output:
        allowedFields:
          - raw

---
kind: ObjectType
version: v1
definition:
  name: Position
  fields:
    - name: accountBaseCurrency
      type: String!
    - name: accountNumber
      type: String!
    - name: baseAdjustedCostAmount
      type: Float!
    - name: baseExpectedIncomeAmount
      type: Float!
    - name: baseMarketPrice
      type: Float!
    - name: baseSettledMarketValueAmount
      type: Float!
    - name: baseTradedMarketValueAmount
      type: Float!
    - name: companyName
      type: "[Array!]!"
    - name: instrumentCode
      type: String!
  graphql:
    typeName: App_Position
    inputTypeName: App_PositionInput
  dataConnectorTypeMapping:
    - dataConnectorName: myts
      dataConnectorObjectType: Position

---
kind: TypePermissions
version: v1
definition:
  typeName: Position
  permissions:
    - role: admin
      output:
        allowedFields:
          - accountBaseCurrency
          - accountNumber
          - baseAdjustedCostAmount
          - baseExpectedIncomeAmount
          - baseMarketPrice
          - baseSettledMarketValueAmount
          - baseTradedMarketValueAmount
          - companyName
          - instrumentCode

---
kind: Command
version: v1
definition:
  name: ProcessPositions
  outputType: Float!
  arguments:
    - name: positions
      type: "[Position!]!"
  source:
    dataConnectorName: myts
    dataConnectorCommand:
      function: processPositions
  graphql:
    rootFieldName: app_processPositions
    rootFieldKind: Query

---
kind: CommandPermissions
version: v1
definition:
  commandName: ProcessPositions
  permissions:
    - role: admin
      allowExecution: true

